<div class="new-story">
{{#link-to 'dashboard' class="btn"}}
	&laquo;&nbsp;Back to Dashboard
{{/link-to}}
{{#with newStory}}
<h3>Select Two Worlds to Crossover</h3>
<div class="world-choices">
	{{#each controller.worldChoices}}
		{{#view App.WorldChoiceView}}
			{{this.name}}
		{{/view}}
	{{/each}}
	<div style="clear:left"></div>
</div>
	<div>
		<h3>What genre is this story?</h3>
		{{view App.SelectField valueBinding="genre"
			contentBinding="App.Genres"
			prompt= "Select Genre...."
		}}
	</div>

	<div>{{view Ember.TextField valueBinding="title" type="text" placeholder="Pick a title for this story..."}}</div>
	<table class="new-story choice-container">
		<tr>
			<td style="width: 40%;" valign="top">
				<h3>Who's writing this story?</h3>
				<div class="role-choice">
					{{#if author}}
						<div class="role-choice selected">
							{{author.name}}
							<a href='#' class="btn remove-btn" {{action "cancelAuthor"}}>Remove</a>
						</div>
					{{else}}
						{{view App.SelectField
							selection = author
							contentBinding="controller.myAvailableTeam"
							optionLabelPath="content.name"
							prompt= "Select Writer..."
							class="role-select"
						}}
					{{/if}}
				</div>
				<div style="clear: left; height: 50px; width: 100%;"></div>
				{{#if controller.showExtra}}
				<h3>Who else should work on this story?</h3>
				<h4>(optional)</h4>
				<div class="role-choices">
					<div class="role-choice">
						Editor<br>
						{{#if editor}}
							<div class="role-choice selected">
								{{editor.name}}
								<a href='#' class="btn remove-btn" {{action "cancelEditor"}}>Remove
								</a>
							</div>
						{{else}}
							{{view App.SelectField
								selection = editor
								contentBinding="controller.myAvailableTeam"
								optionLabelPath="content.name"
								prompt= "Select Editor..."
								class="role-select"
							}}
						{{/if}}
					</div>
					<div class="role-choice">
						Artist<br>
						{{#if artist}}
							<div class="role-choice selected">
								{{artist.name}}
								<a href='#' class="btn remove-btn" {{action "cancelArtist"}}>Remove</a>
							</div>
						{{else}}
						{{view App.SelectField
							selection = artist
							contentBinding="controller.myAvailableTeam"
							optionLabelPath="content.name"
							prompt= "Select Artist..."
							class="role-select"
						}}
						{{/if}}
					</div>
					<div class="role-choice">
						Promoter<br>
						{{#if promoter}}
							<div class="role-choice selected">
								{{promoter.name}}
								<a href='#' class="btn remove-btn" {{action "cancelPromoter"}}>Cancel</a>
							</div>
						{{else}}
							{{view App.SelectField
								selection = promoter
								contentBinding="controller.myAvailableTeam"
								optionLabelPath="content.name"
								prompt= "Select Promoter..."
								class="role-select"
							}}
						{{/if}}
					</div>
				</div>
				{{/if}}

				{{#if controller.showCreateButton}} <a href='#' class="btn btn-large btn-create">Create Story</a>{{/if}}
			</td>
			<td valign="top">
				<h3>Team Members</h3>
				{{partial "teamMemberList"}}
			</td>
		</tr>
	</table>
{{/with}}

{{#if showCreateButton}} <button {{action "createStory"}}> DO IT!</button>{{/if}}
</div>